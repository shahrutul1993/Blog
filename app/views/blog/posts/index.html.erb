    <div class="content-wrapper oh">

      <!-- Latest Stories -->
      <section class="section-wrap latest-stories pb-0">
        <div class="container-fluid nopadding">
          <div class="heading-row text-center mb-40">
            <h2 class="heading uppercase small">Latest Posts</h2>
          </div>

          <div id="main-slider" class="flickity-slider-wrap">
          <% @posts.limit(5).each do |post|%>
            <div class="gallery-cell">
              <article>
                <%= link_to "/", class: "entry-img" do%>
                <%= image_tag(post.banner_image_url, class: "img-responsive", alt:"") %>
                  <span class="entry-category">Travel</span>
                <% end %>
                <div class="entry text-center">
                  <h4 class="entry-title uppercase">
                  <%= link_to post do%><%= post.title%><% end %>
                  </h4>
                  <span class="entry-date"><%= post.display_day_published %></span>
                </div>
              </article>
              </div>
              <% end %>
        </div>
        </div>

      </section> <!-- end latest stories -->

      <!-- Content -->
      <section class="content blog-standard">
        <div class="container relative">
          <div class="row">
            <!-- post content -->

            <div class="col-md-9 post-content mb-50">
              <!-- large post -->
               <% @posts.limit(2).each do |post|%>
              <article class="entry-item large-post">
                <div class="entry-header">
                  <%= link_to "/", class: "entry-category" do%>Lifestyle<% end %>
                  <h2 class="entry-title">
                    <%= link_to post do%><%= post.title%><% end %>
                  </h2>
                </div>
                <div class="entry-img">
                  <%= link_to "/" do%>
                   <%= image_tag(post.banner_image_url, alt:"") %>
                  <% end %>
                </div>

                <div class="entry-wrap">
                  <div class="entry">
                    <div class="entry-content">
                      <p><%= post.body%>
                      </p>
                      <div class="text-center">
                        <%= link_to post, class: "read-more underline-link" do%>Read More<% end %>
                      </div>
                    </div>

                    <div class="entry-meta-wrap clearfix">
                      <ul class="entry-meta">
                        <li class="entry-date">
                          <%= link_to "/" do%><%= post.display_day_published %><% end %>
                        </li>             
                      </ul>

                      <div class="social-icons right">
                        <%= link_to "/" do%>
                          <i class="fa fa-instagram"></i>
                        <% end %>
                         <%= link_to "/" do%>
                          <i class="fa fa-facebook"></i>
                        <% end %>
                        <%= link_to "/" do%>
                          <i class="fa fa-twitter"></i>
                        <% end %>                        
                         <%= link_to "/" do%>
                          <i class="fa fa-pinterest-p"></i>
                        <% end %>
                         <%= link_to "/" do%>
                          <i class="fa fa-heart"></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </article> <!-- end large post -->
              <% end %>

              <!-- grid posts -->
              <div class="row items-grid">
                 <% @posts.limit(4).each do |post|%>
                <div class="col-sm-6">
                  <article class="entry-item">
                    <div class="entry-img">
                     <%= link_to "/" do%>
                       <%= image_tag(post.banner_image_url, alt:"") %>
                      <% end %>
                    </div>
                    <div class="entry-header">
                      <%= link_to "/", class: "entry-category" do%>Lifestyle<% end %>
                      <h2 class="entry-title">
                        <%= link_to post do%><%= post.title%><% end %>
                      </h2>
                    </div>
                    <div class="entry-wrap">
                      <div class="entry">
                        <div class="entry-content">
                          <p><%= post.body%>
                          </p>
                        </div>
                        <div class="entry-meta-wrap clearfix">
                          <ul class="entry-meta">
                            <li class="entry-date">
                              <%= link_to "/" do%><%= post.display_day_published %><% end %>
                            </li>
                             <li class="entry-comments">
                               <%= link_to "/" do%>2 Comments<% end %>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </article>

                </div>
                <% end %>

              </div> <!-- end grid posts -->
               <div class="apple_pagination">
